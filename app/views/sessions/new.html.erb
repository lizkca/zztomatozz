<div class="max-w-sm mx-auto">
  <h1 class="text-xl font-semibold text-emerald-700"><%= t("nav.login") %></h1>
  <% if flash[:alert] %>
    <div class="mt-3 rounded-lg bg-red-50 text-red-700 p-3 text-sm"><%= flash[:alert] %></div>
  <% end %>
  <%= form_with url: session_path, method: :post, local: true, class: "mt-4 grid gap-3" do %>
    <%= text_field_tag :email, params[:email], placeholder: "Email", class: "rounded-lg ring-1 ring-slate-200 p-2" %>
    <%= password_field_tag :password, nil, placeholder: "Password", class: "rounded-lg ring-1 ring-slate-200 p-2" %>
    <%= submit_tag t("nav.login"), class: "px-4 py-2 rounded-lg bg-emerald-600 text-white" %>
  <% end %>
  <div class="mt-3 text-sm">
    <a href="<%= new_user_path %>" class="text-emerald-600"><%= t("nav.signup") %></a>
  </div>
</div>