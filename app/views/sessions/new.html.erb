<div class="max-w-sm mx-auto">
  <h1 class="text-xl font-semibold text-emerald-700">登录</h1>
  <%= form_with url: session_path, method: :post, local: true, class: "mt-4 grid gap-3" do %>
    <%= text_field_tag :email, params[:email], placeholder: "邮箱", class: "rounded-lg ring-1 ring-slate-200 p-2" %>
    <%= password_field_tag :password, nil, placeholder: "密码", class: "rounded-lg ring-1 ring-slate-200 p-2" %>
    <%= submit_tag "登录", class: "px-4 py-2 rounded-lg bg-emerald-600 text-white" %>
  <% end %>
  <div class="mt-3 text-sm">
    <a href="<%= new_user_path %>" class="text-emerald-600">注册新账号</a>
  </div>
</div>