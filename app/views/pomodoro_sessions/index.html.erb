<div class="rounded-xl ring-1 ring-emerald-200 bg-white p-6">
  <div class="flex items-center justify-between">
    <div class="text-lg font-semibold text-emerald-700">
      <% if current_user %>
        <%= t("records.title_mine") %>
      <% else %>
        <%= t("records.title_shared") %>
      <% end %>
    </div>
    <a href="/" class="px-3 py-2 rounded-lg bg-emerald-100 text-emerald-700"><%= t("stats.back_home") %></a>
  </div>
  <div class="mt-4 grid gap-2">
    <% @sessions.each do |s| %>
      <div class="flex items-center justify-between px-3 py-2 rounded-lg bg-emerald-50">
        <div class="flex items-center gap-2">
          <span>üçÖ</span>
          <span class="text-sm text-slate-600"><%= s.label.presence || s.ended_at.strftime("%m-%d %H:%M") %></span>
        </div>
        <div class="text-xs text-slate-500"><%= s.duration_seconds / 60 %> <%= t("records.minutes_suffix") %></div>
      </div>
    <% end %>
  </div>
</div>
<% content_for :title, t("site.name") + " ¬∑ " + t("nav.records") %>
<% content_for :description, t("seo.description.records") %>
